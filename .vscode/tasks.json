{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (OpenGL)",
            "type": "shell",
            "command": "D:/mingw64/bin/g++.exe",
            "args": [
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/glad.c",
                "-I", "${workspaceFolder}/include",      
                "-L", "${workspaceFolder}/lib",          // library folder
                "-lglfw3dll",                            // link GLFW
                "-lopengl32",                             // OpenGL on Windows
                "-lgdi32",                                // Windows GUI library
                "-std=c++17",                             // C++17 for std::to_string
                "-o", "${workspaceFolder}/app.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/app.exe",
            "dependsOn": "Build C++ (OpenGL)"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "D:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I", "${workspaceFolder}/include",
                "-L", "${workspaceFolder}/lib",
                "-lglfw3dll",
                "-lopengl32",
                "-lgdi32",
                "-std=c++17",
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
